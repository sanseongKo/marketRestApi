<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="net.lunalabs.central.mapper.mysql.ProductMapper">
	
	<insert id="save">
		INSERT INTO marketdb.product(name, code)
		VALUES(#{name},#{code})
	</insert>

	<delete id="deleteById">
		DELETE FROM marketdb.product WHERE id = #{id}
	</delete>

	<update id="update">
		UPDATE marketdb.product SET name=#{name}, code=#{code} WHERE
		id = #{id}
	</update>
	
	
	<select id="findAll"
		resultType="net.lunalabs.central.domain.mysql.Product">
		<![CDATA[
		select * from marketdb.product order by id desc 
		]]>
	</select>



	<select id="findById"
		resultType="net.lunalabs.central.domain.mysql.Product">
		<![CDATA[
		select * from product where id=#{id} 
		]]>
	</select>
	

	<select id="findByIdAndJoin" resultType="net.lunalabs.central.domain.mysql.ProductBean">
		SELECT pm.id, pm.username, pd.name, pd.code  
		FROM panama pm inner join product pd 
		ON pm.productId = pd.id 
		WHERE pm.id = #{id}; 
	</select>


</mapper>
